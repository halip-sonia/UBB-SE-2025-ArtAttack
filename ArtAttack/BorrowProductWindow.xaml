<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ArtAttack.BorrowProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArtAttack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Product Details Section (Left Side) -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" 
                Background="#FFF5F5F5" Padding="10">
            <StackPanel>
                <TextBlock x:Name="txtProductName" FontSize="16" FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="txtPrice" Margin="0,5"/>
                <TextBlock x:Name="txtSeller" Margin="0,5"/>
                <TextBlock x:Name="txtType" Margin="0,5"/>
                <TextBlock x:Name="txtDates" Margin="0,5"/>
                <TextBlock x:Name="txtWaitListInfo" Margin="0,10,0,0" 
                           Foreground="Blue" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <!-- Action Buttons Section (Right Side) -->
        <StackPanel Grid.Column="1" Width="150" Margin="10,0,0,0">
            <Button x:Name="btnBorrow" Content="Borrow" Height="40" Margin="0,10"
                    Click="btnBorrow_Click" Visibility="Collapsed"/>
            <Button x:Name="btnJoinWaitList" Content="Join WaitList" Height="40" Margin="0,10"
                    Click="btnJoinWaitList_Click" Visibility="Collapsed"/>
            <Button x:Name="btnViewWaitList" Content="View WaitList" Height="30" Margin="0,10"
                    Click="btnViewWaitList_Click"/>
        </StackPanel>
    </Grid>
</Window>
