<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ArtAttack.BorrowProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Product Details">

    <Grid Margin="20">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#cccaca"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="#cccaca"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Padding" Value="15,5"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Product Details Section -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock x:Name="txtProductName" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="txtPrice" FontSize="16"/>
            <TextBlock x:Name="txtSeller" FontSize="16"/>
            <TextBlock x:Name="txtType" FontSize="16"/>
            <TextBlock x:Name="txtDates" FontSize="14" Foreground="#666666"/>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="1"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,0,0">
            <Button x:Name="btnBorrow" 
                    Content="Borrow" 
                    Visibility="Collapsed"/>

            <Button x:Name="btnJoinWaitList" 
                    Content="Join WaitList" 
                    Visibility="Collapsed"
                    Click="btnJoinWaitList_Click"/>
        </StackPanel>

        <!-- Waitlist Actions - Now properly aligned -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20,20,0,0">
            <StackPanel x:Name="waitlistActionsPanel" 
                Orientation="Horizontal"
                Visibility="Collapsed"
                HorizontalAlignment="Right">
                <Button x:Name="btnLeaveWaitList" 
                    Content="Leave Waitlist" 
                    Click="btnLeaveWaitList_Click"
                    Margin="0,0,10,0"
                    Width="120"/>
                <Button x:Name="btnViewPosition" 
                    Content="Position" 
                    Click="btnViewPosition_Click"
                    Width="120"/>
            </StackPanel>

            <!-- Position text now appears below the buttons -->
            <TextBlock x:Name="txtPositionInQueue" 
               Visibility="Collapsed"
               Margin="0,5,0,0"
               FontSize="16"
               FontWeight="SemiBold"
               HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>