<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ArtAttack.MainNotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArtAttack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Domain="using:ArtAttack.Domain"
    xmlns:viewmodel="using:ArtAttack.ViewModel"
    mc:Ignorable="d">

    <StackPanel x:Name="RootPanel" Background="WhiteSmoke">
        <Border Background="LightGray" Padding="10" Width="Auto">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BackButton" 
                    Content="î„’" 
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Margin="0,0,15,0"
                    Padding="10,5"
                    Foreground="Black"
                    Click="BackButton_Click"
                    ToolTipService.ToolTip="Back to notifications"/>

                <TextBlock Text="{Binding unReadNotificationsCountText}"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Viewbox HorizontalAlignment="Center" Margin="15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Top"
                      Background="WhiteSmoke"
                      Width="Auto"
                      Margin="80,0,0,0">
                <ListView x:Name="notificationList" 
                          SelectionChanged="notificationList_SelectionChanged"
                         ItemsSource="{Binding Notifications}"
                         SelectionMode="Single"
                         Margin="0,0,140,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="DarkGray"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="20"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Width" Value="1800"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" 
                                             Foreground="Black"
                                             FontWeight="SemiBold"
                                             FontSize="20"/>
                                    <TextBlock Text="{Binding Subtitle}" 
                                             Foreground="Black"
                                             FontSize="18"
                                             Margin="0,5,0,0"
                                             Opacity="0.8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding timestamp}"
                                             Foreground="Gray"
                                             FontSize="16"/>
                                    <CheckBox IsChecked="{Binding IsNotRead, Mode=OneWay}"
                                            VerticalAlignment="Top"
                                            Margin="135,0,0,0"
                                            IsEnabled="{Binding IsNotRead, Mode=OneWay}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Viewbox>
    </StackPanel>
</Window>