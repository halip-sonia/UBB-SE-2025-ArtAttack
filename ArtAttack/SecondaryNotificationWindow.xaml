<Window
    x:Class="ArtAttack.SecondaryNotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArtAttack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Domain="using:ArtAttack.Domain"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightGray" Padding="15,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BackButton" 
                        Content="î„’" 
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Margin="0,0,15,0"
                        Padding="10,5"
                        Foreground="Black"
                        Click="BackButton_Click"
                        ToolTipService.ToolTip="Back to notifications"/>

                <TextBlock Text="Notification Details" 
                           FontSize="18"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Padding="20">
            <Border Background="White" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1"
                    Padding="20"
                    CornerRadius="8">
                <StackPanel>
                    <TextBlock x:Name="selectedNotificationTitle"
                        Foreground="Black"
                        FontWeight="Bold"
                        FontSize="22"
                        Margin="0,0,0,8"/>

                    <Border BorderBrush="#FFEEEEEE"
                            BorderThickness="0,1,0,0"
                            Margin="0,0,0,12"
                            Padding="0,12,0,0"/>

                    <TextBlock x:Name="selectedNotificationContent" 
                               Foreground="Black"
                               FontSize="16"
                               TextWrapping="Wrap"
                               LineHeight="24"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>